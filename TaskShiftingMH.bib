  keywords = {Adult, Attitude, Decision Making, Female, *HIV Infections/di [Diagnosis], *Health Personnel/px [Psychology], Humans, Infant Care, Infant, Newborn, Interviews as Topic, Kenya, Male, *Parents/px [Psychology], Parturition, Point-of-Care Systems, Pregnancy, Qualitative Research},
  refid    = {31756242},
  url      = {http://ovidsp.ovid.com/ovidweb.cgi?T=JS&PAGE=reference&D=mesx&NEWS=N&AN=31756242},
}

