@Article{Bolton2019,
  author    = {Bolton, Paul and Arboleda-Florez, Bolton, Bracken Epping-Jordan Haroz McHugh Michalopoulos Murray Murray Murray Resick Ruzek Sijbrandij Singla Stangor Taylor van Ginneken Weiss and Stein, Dan J [Ed], Bass Judith K. [Ed] Hofmann Stefan G. [Ed]},
  journal   = {Global mental health and psychotherapy: Adapting psychotherapy for low- and middle-income countries.},
  title     = {Global mental health and psychotherapy: Importance of task-shifting and a systematic approach to adaptation.},
  year      = {2019},
  issn      = {978-0-12-814932-4 (Hardcover)},
  number    = {WHO. (2015). Mental health atlas 2014. ISBN 978.92.4.156501.1 (NLM classification: WM 17) © World Health Organization http://www.who.int/mediacentre/news/notes/2015/finances-mental-health/en/ (accessed 10.03.18).},
  pages     = {11--24},
  abstract  = {The lack of mental health professionals in most low- and middle-income countries and the high cost of increasing their numbers make task shifting currently the most viable approach to improving global access to psychotherapy. The labor intensiveness of these interventions prevents the transfer of tasks to other health professionals, necessitating the training of paraprofessionals who focus on these treatments. However, ongoing concerns about the ability of paraprofessionals to learn and provide these treatments at scale have led to the development of expurgated versions of the standard psychotherapies that are still undergoing testing. There are also efforts to reduce or remove reliance on paraprofessionals through technology-based self-administered treatments. Developing an adapted treatment suitable for task shifting can be a difficult task. The final version must explain the material in ways that are understandable and acceptable to both providers and clients. Ensuring this requires a systematic iterative process. This chapter provides a summary of a recommended stepwise process successfully used by the authors and colleagues in diverse regions of the world. It presents the steps in order to explain their rationale. (PsycINFO Database Record (c) 2019 APA, all rights reserved)},
  address   = {San Diego, CA, US},
  keywords  = {*Countries, *Health Care Delivery, *Lower Income Level, *Middle Income Level, *Psychotherapy, Mental Health, Mental Health Services, Psychotherapists},
  publisher = {US},
  refid     = {2019-17951-002},
  url       = {http://ovidsp.ovid.com/ovidweb.cgi?T=JS&PAGE=reference&D=psyc16&NEWS=N&AN=2019-17951-002},
}

@Article{Stein2019a,
  author    = {Stein, Dan J. [Ed] and Bass, Judith K. [Ed] and Hofmann, Stefan G. [Ed]},
  journal   = {Global mental health and psychotherapy: Adapting psychotherapy for low- and middle-income countries.},
  title     = {Global mental health and psychotherapy: Adapting psychotherapy for low- and middle-income countries.},
  year      = {2019},
  issn      = {978-0-12-814932-4 (Hardcover)},
  abstract  = {Psychological therapies have, for a long time, been relegated to an adjunctive or secondary role in the treatment of mental health problems, in comparison with pharmacological therapies, not least because most mental health professionals, particularly in low- and middle-income countries, are psychiatrists who had neither the training nor the inclination to deliver these therapies. This volume lays out the impressive evidence of the acceptability and effectiveness for a range of mental health problems across the life course and in diverse contexts and for a range of goals from promotion and prevention, to the treatment of acute phases of illness, to rehabilitation and recovery. This book takes a detailed look at how psychotherapies can be adapted and implemented in low- and middle-income countries, while also illuminating the challenges and how to overcome them. It addresses the conceptual framework underlying global mental health and psychotherapy, focusing on the importance of task-shifting, a common-elements approach, rigorous supervision, and the scaling up of psychotherapies. Specific psychotherapies, such as cognitive-behavioral therapy, interpersonal therapy and collaborative care are given in-depth coverage, as is working with special populations, such as children and adolescents, pregnant women, refugees, and the elderly. The book also covers treatment strategies for common disorders, such as depression, anxiety and stress, and substance abuse, as are strategies for more severe mental disorders, such as schizophrenia. This volume is not only the first comprehensive account of this rich body of evidence but also a very timely one, with the goal of taking stock of the progress to date, addressing some key questions that have hindered the global application of these therapies, and allowing reflection on the implications of this evidence for transforming mental health globally. (PsycINFO Database Record (c) 2019 APA, all rights reserved)},
  address   = {San Diego, CA, US},
  keywords  = {*Countries, *Lower Income Level, *Middle Income Level, *Psychotherapy, Cognitive Behavior Therapy, Drug Therapy, Health Care Delivery, Interpersonal Psychotherapy, Mental Disorders, Mental Health, Psychiatrists, Rehabilitation},
