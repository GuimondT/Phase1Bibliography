@Article{Cottingham2014,
  author   = {Cottingham, Ann H. and Alder, Catherine and Austrom, Mary Guerriero and Johnson, Cynthia S. and Boustani, Malaz A. and Litzelman, Debra K.},
  journal  = {J Am Geriatr Soc},
  title    = {New workforce development in dementia care: screening for "caring": preliminary data.},
