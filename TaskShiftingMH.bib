  keywords = {Antidepressive Agents/tu [Therapeutic Use], General Practice, Humans, *Mental Disorders/di [Diagnosis], Mental Disorders/ep [Epidemiology], *Mental Disorders/th [Therapy], Mental Health Services/ec [Economics], Mental Health Services/st [Standards], *Mental Health Services, Netherlands, Primary Health Care/ec [Economics], *Primary Health Care, *Psychiatric Nursing},
  refid    = {30793274},
