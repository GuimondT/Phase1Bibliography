  keywords = {*Allied Health Personnel, Attitude of Health Personnel, *Community Mental Health Services, Cross-Sectional Studies, Drug Prescriptions/nu [Nursing], Ghana, Global Health, Humans, Mental Disorders/di [Diagnosis], *Mental Disorders/th [Therapy], *Professional Competence, Workforce},
