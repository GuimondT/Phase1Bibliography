  author   = {Frost, Rachael and Walters, Kate and Aw, Su and Brunskill, Greta and Wilcock, Jane and Robinson, Louise and Knapp, Martin and Dening, Karen Harrison and Allan, Louise and Manthorpe, Jill and Rait, Greta and project team, PriDem Study},
  journal  = {Br J Gen Pract},
  title    = {Effectiveness of different post-diagnostic dementia care models delivered by primary care: a systematic review.},
  year     = {2020},
