  keywords = {Adult, *Attitude of Health Personnel, *Autistic Disorder/px [Psychology], Child, Community Health Workers/ed [Education], *Community Health Workers/px [Psychology], Ethiopia, Female, Health Knowledge, Attitudes, Practice, Humans},
