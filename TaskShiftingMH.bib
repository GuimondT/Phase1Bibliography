  keywords = {*Culture, Developing Countries, Global Health, Health Services Needs and Demand/og [Organization & Administration], Humans, *Language, *Mental Health Services/og [Organization & Administration], Mental Health Services/sd [Supply & Distribution], Translating},
  refid    = {24581319},
