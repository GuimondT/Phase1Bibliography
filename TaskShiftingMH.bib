  comment   = {World Congress of Behavioral and Cognitive Therapies. 7th. Jul, 2013. Lima. Peru. Presented in part at the aforementioned conference.},
  keywords  = {*Clinical Practice, *Psychiatry, *Psychotherapeutic Processes, *Research and Development, Globalization, Health Personnel},
  publisher = {US},
  refid     = {2014-18294-006},
  series    = {American Journal of Insanity},
  url       = {http://ovidsp.ovid.com/ovidweb.cgi?T=JS&PAGE=reference&D=psyc11&NEWS=N&AN=2014-18294-006},
}

