  keywords = {Adult, Cost-Benefit Analysis, *Delivery of Health Care, Integrated, Depressive Disorder, Major/ec [Economics], Developing Countries, Female, Health Personnel/ec [Economics], Humans, Male, *Mental Health Services/og [Organization & Administration], Nigeria, Pilot Projects, Poverty/ec [Economics], *Primary Health Care/og [Organization & Administration], Referral and Consultation/ec [Economics], Substance-Related Disorders},
  refid    = {26094025},
  url      = {http://ovidsp.ovid.com/ovidweb.cgi?T=JS&PAGE=reference&D=med12&NEWS=N&AN=26094025},
}

