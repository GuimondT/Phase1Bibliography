@Article{McQuillin2019,
  author   = {McQuillin, Samuel D. and Lyons, Michael D. and Becker, Kimberly D. and Hart, Mackenzie J. and Cohen, Katie},
  journal  = {Am J Community Psychol},
  title    = {Strengthening and Expanding Child Services in Low Resource Communities: The Role of Task-Shifting and Just-in-Time Training.},
