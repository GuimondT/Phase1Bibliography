@Article{Kohrt2011,
  author   = {Kohrt, Brandon A. and Jordans, Mark J. D. and Tol, Wietse A. and Luitel, Nagendra P. and Maharjan, Sujen M. and Upadhaya, Nawaraj},
  journal  = {BMC Psychiatry},
