}

@Article{Magnee2019,
  author   = {Magnee, T. and de Beurs, D. P. and Schellevis, F. G. and Verhaak, P. F.},
  journal  = {Tijdschr Psychiatr},
  title    = {[Developments in mental health care in Dutch general practices: an overview of recent studies].},
