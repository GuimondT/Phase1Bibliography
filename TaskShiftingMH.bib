  keywords = {Adolescent, Child, *Depression/di [Diagnosis], Developing Countries/sn [Statistics & Numerical Data], Female, Humans, Male, Nepal, *Psychiatric Status Rating Scales/sn [Statistics & Numerical Data], Sensitivity and Specificity, *Stress Disorders, Post-Traumatic/di [Diagnosis], Translating},
  refid    = {21816045},
